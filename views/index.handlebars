<h1 class="jumbotron text-center">Eat Da Burger!</h1>
<div class="container">
    <div class="row">
        <div class="col-4">
            <h2>Burgers that have not been eaten</h2>

            <ul class="list">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger/burger-block sleep=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <h2>Burgers that have been eaten</h2>

            <ul class="list">
                {{#each burgers}}
                {{#if devoured}}
                {{> burger/burger-block sleep=false color=blue}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <h2 class="submit">Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>


                <div class="submit">
                    <button class="btn btn-primary" type="submit">Add Burger</button>
                </div>
            </form>
        </div>
    </div>
</div>