<h1>Eat Da Burger!</h1>

<h2>Burgers that have not been eaten</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger/burger-block sleep=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been eaten</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger/burger-block sleep=false color=blue}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>



    <button type="submit">Add Burger</button>
</form>